<%= link_to "アイテム新規登録", new_admin_item_path %>
<div class="container">
  <h4 class="my-2">アイテム一覧(全<%= Item.count %>件)</h4>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-3">
        <%= link_to admin_item_path(item.id) do %>
          <%= image_tag item.get_image(200,200) %>
        <% end %>
        <div class ="row">
          <%= item.name %><br>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <%= paginate @items %>
  </div>
</div>



