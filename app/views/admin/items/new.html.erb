<h4 class="my-2 ml-2">アイテム新規登録</h4>
<div class="d-flex align-items-center justify-content-center">
  <%= form_with model: @item, url:admin_items_path do |f| %>
    <div class="form-group">
      <label for="genre">ジャンル</label><br>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
    </div>
    <div class="form-group">
      <label for="item_imagee">商品画像</label><br>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <label for="item_name">商品名</label><br>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <label for="item_introduction">商品説明</label><br>
      <%= f.text_area :introduction %>
    </div>
    <div class="form-group">
      <label for="item_price">税抜き価格</label><br>
      <%= f.text_field :price %>
    </div>
    <div class="form-group">
      <%= f.submit '公開', class:"btn btn-success" %>
    </div>
  <% end %>
</div>
