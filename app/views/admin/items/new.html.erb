<h1>アイテム新規登録</h1>
  <%= form_with model: @item, url:admin_items_path do |f| %>
    <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>説明</h4>
      <%= f.text_area :introduction %>
    <h4>価格（税抜）</h4>
      <%= f.text_field :price %>
    <%= f.submit '公開' %>
  <% end %>